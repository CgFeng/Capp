<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.chengang.capp.business.SplashActivity">

    <ImageView
        android:id="@+id/ivCloseGuide"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/guide_close" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/start_experience"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPagerGuide"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivGuide1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/welcome_selected" />

            <ImageView
                android:id="@+id/ivGuide2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/welcome_unselected" />

            <ImageView
                android:id="@+id/ivGuide3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/welcome_unselected" />

            <ImageView
                android:id="@+id/ivGuide4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/welcome_unselected" />

            <ImageView
                android:id="@+id/ivGuide5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/welcome_unselected" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
